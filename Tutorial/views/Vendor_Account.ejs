                <div>
                    <label for="fullname">Fullname</label>
                    <input type="text" id="fullname" name="fullname" value="<%=info.Full_name%>">
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" value="<%=info.email%>">
                </div>
                <div>
                    <label for="phone">Phone Number</label>
                    <input type="text" id="phone" name="phone" value="<%=info.Phone_Number%>">
                </div>
                <div>
                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" value="<%=info.address%>">
                </div>
                <div>
                    <label for="business_address">Business Address</label>
                    <input type="text" id="business_address" name="business_address" value="<%=info.Business_name%>">
                </div>
                <div>
                    <label for="business_phone">Business Phone Number</label>
                    <input type="text" id="business_phone" name="business_phone" value="<%=info.baddress%>">
                </div>
                <div>
                    <label for="national_id">National ID</label>
                    <input type="text" id="national_id" name="national_id" value="<%=info.national_id%>">
                </div>
                <div>
                    <input name="image" type="file">
                </div>
                <div>
                    <input type="submit" value="Update">
                </div>
            </form>
        </div>
    </main>
    <footer>
        <div class="subscriptionDiv">
            <h4>Sign up for more information?</h4>
            <form action="">
                <div class="subscriptionDivInput">
                    <input type="email" placeholder="Enter your email address here...">
                    <button type="submit"><i class="fa-solid fa-envelope"></i></button>
